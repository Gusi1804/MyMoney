<div class="d-flex justify-content-between">
    <h1>{{title}}</h1>
    <a href="/new/account" target="_blank" class="btn btn-secondary btn-sm" style="height: 2.2em;">New</a>
</div>



{{#if accounts}} <!-- Only show list if there user already has accounts -->
    <ul class="list-group">
        {{#each accounts}} <!-- Execute this code for each account object -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><a href="/accounts/{{@key}}">{{name}}</a> |
                {{balance_f}} |
                {{type}}</span>
                <a href="/delete/account/{{@key}}" class="btn btn-danger btn-sm ms-2">Delete</a>
            </li>
        {{/each}}
    </ul>
{{else}}
<p>No accounts yet...</p>
{{/if}}