<div class="d-flex justify-content-between">
    <h1>{{title}}</h1>
    <a href="/new/project" target="_blank" class="btn btn-secondary btn-sm" style="height: 2.2em;">New</a> <!-- New Project button -->
</div>

{{#if projects}} <!-- Only show list if there user already has projects -->
    <ul class="list-group">
        {{#each projects}} <!-- Execute this code for each project object -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><a href="/projects/{{@key}}">{{name}}</a> | 
                {{balance_f}}</span>
                <a href="/delete/project/{{@key}}" class="btn btn-danger btn-sm ms-2">Delete</a> <!-- Delete button -->
        {{/each}}
    </ul>
{{else}}
<p>No projects yet...</p>
{{/if}}