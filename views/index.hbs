<div class="d-flex justify-content-between">
    <h1>{{title}}</h1>
    <a href="/new/transaction" target="_blank" class="btn btn-secondary btn-sm align-middle" style="height: 2.2em;"><small>New Transaction</small></a>
</div>

<div class="accordion accordion-flush" id="accordionFlushExample">
    {{#if transactions}}
        {{#each transactions}}
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading{{id}}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{id}}" aria-expanded="false" aria-controls="flush-collapse{{id}}">
                    {{item}}: {{amount_f}} | {{date_f}}
                </button>
            </h2>
            <div id="flush-collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{id}}" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                     <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{category}}
                            {{merchant}}
                            {{project}}
                            <a href="/delete/transaction/{{@key}}" class="btn btn-danger">Delete</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
    <p>No transactions yet...</p>
    {{/if}}
</div>