<div class="d-flex justify-content-between">
    <h1>{{title}}</h1>
    <a href="/new/category" target="_blank" class="btn btn-secondary btn-sm" style="height: 2.2em;">New</a>
</div>

{{#if categories}} <!-- Only show list if there user already has categories -->
    <ul class="list-group">
        {{#each categories}} <!-- Execute this code for each category object -->
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><a href="/categories/{{@key}}">{{name}}</a> | 
                {{balance_f}}</span>
                <a href="/delete/category/{{@key}}" class="btn btn-danger btn-sm ms-2">Delete</a>
        {{/each}}
    </ul>
{{else}}
<p>No categories yet...</p>
{{/if}}